<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/case1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/suitcase_position_1"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/case2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/suitcase_position_2"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/case1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/case3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/suitcase_position_3"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case1" />

    <ImageButton
        android:id="@+id/case4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/suitcase_position_4"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/case3"
        app:layout_constraintTop_toBottomOf="@+id/case2" />

    <ImageButton
        android:id="@+id/case5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/suitcase_position_5"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case3" />

    <ImageButton
        android:id="@+id/case6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/suitcase_position_6"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/case5"
        app:layout_constraintTop_toBottomOf="@+id/case4" />

    <ImageButton
        android:id="@+id/case7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/suitcase_position_7"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case5" />

    <ImageButton
        android:id="@+id/case8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/suitcase_position_8"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/case7"
        app:layout_constraintTop_toBottomOf="@+id/case6" />

    <ImageButton
        android:id="@+id/case9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/suitcase_position_9"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case7" />

    <ImageButton
        android:id="@+id/case10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/suitcase_position_10"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/case9"
        app:layout_constraintTop_toBottomOf="@+id/case8" />

    <ImageView
        android:id="@+id/dealOrNoDeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deal_no_deal_logo" />

    <TextView
        android:id="@+id/chooseFourCases"
        android:layout_width="315dp"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="@string/chooseFourCases"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealOrNoDeal" />

    <Button
        android:id="@+id/reset"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="20dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/oned"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case2"
        app:layout_constraintTop_toTopOf="@+id/case2"
        app:srcCompat="@drawable/reward_1" />

    <ImageView
        android:id="@+id/tend"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/case2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case2"
        app:layout_constraintTop_toBottomOf="@+id/oned"
        app:srcCompat="@drawable/reward_10" />

    <ImageView
        android:id="@+id/fiftyd"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/onehundredd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case4"
        app:layout_constraintTop_toTopOf="@+id/case4"
        app:srcCompat="@drawable/reward_50" />

    <ImageView
        android:id="@+id/onehundredd"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/case4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case4"
        app:layout_constraintTop_toBottomOf="@+id/fiftyd"
        app:srcCompat="@drawable/reward_100" />

    <ImageView
        android:id="@+id/threehundredd"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/onethousandd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case6"
        app:layout_constraintTop_toTopOf="@+id/case6"
        app:srcCompat="@drawable/reward_300" />

    <ImageView
        android:id="@+id/onethousandd"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/case6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case6"
        app:layout_constraintTop_toBottomOf="@+id/threehundredd"
        app:srcCompat="@drawable/reward_1000" />

    <ImageView
        android:id="@+id/tenthousandd"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/fiftythousandd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case8"
        app:layout_constraintTop_toTopOf="@+id/case8"
        app:srcCompat="@drawable/reward_10000" />

    <ImageView
        android:id="@+id/fiftythousandd"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/case8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case8"
        app:layout_constraintTop_toBottomOf="@+id/tenthousandd"
        app:srcCompat="@drawable/reward_50000" />

    <ImageView
        android:id="@+id/onehundredthousandd"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/fivehundredthousandd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case10"
        app:layout_constraintTop_toTopOf="@+id/case10"
        app:srcCompat="@drawable/reward_100000" />

    <ImageView
        android:id="@+id/fivehundredthousandd"
        android:layout_width="90dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/case10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/case10"
        app:layout_constraintTop_toBottomOf="@+id/onehundredthousandd"
        app:srcCompat="@drawable/reward_500000" />

    <Button
        android:id="@+id/deal"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="80dp"
        android:text="@string/deal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/noDeal"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/noDeal"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="@string/noDeal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>